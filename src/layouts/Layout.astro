---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="tr-TR">
	<head>
		<SEO
			title="Doğadan Büyülü Tavsiyeler | @sonatipek"
			description="Doğadan bitki çaylarında çıkan birbirinden güzel tavsiyeleri bir araya topladık."
			openGraph={{
				basic: {
					title: "Doğadan Büyülü Tavsiyeler | Sonat Saygın İpek",
					type: "website",
					image: "https://sonatipek.com/assets/img/avataaars.svg",
					url: "https://dogadan-advices.vercel.app/",
				},
				optional: {
					description: "Doğadan bitki çaylarında çıkan birbirinden güzel tavsiyeleri bir araya topladık."
				}
			}}
			twitter={{
				card:"summary",
				site: "@sonatipek",
				title: "Doğadan Büyülü Tavsiyeler | Sonat Saygın İpek",
				creator: "@sonatipek",
				description: "Doğadan bitki çaylarında çıkan birbirinden güzel tavsiyeleri bir araya topladık."
			}}
			extend={{
				link: [{rel: "icon", href: "/favicon.svg"}],
			}}
			charset="UTF-8"
			
		/>
		
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="theme-color" content="#198754" />
		<meta name="generator" content={Astro.generator} />

		<!-- Font Awrsome CDN -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

		<!-- Bootstrap CSS CDN -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
	</head>
	<body>
		<Navbar></Navbar>
		
		<slot />
		<Footer></Footer>
		<!-- Bootstrap.js CDN -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
	</body>
</html>